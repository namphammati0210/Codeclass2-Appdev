<form action="/staff/addTrainerCourse" method="POST">

  <div class="form-group">
    <label for="exampleInputPassword1">Trainers</label>
    <select class="form-control" name="trainerId"> 
      <% trainers.forEach(trainer => { %>
        <option value="<%= trainer.id %>"><%= trainer.fullname %></option>
      <% }); %>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Courses</label>
    <select class="form-control" name="courseId"> 
      <% courses.forEach(course => { %>
        <option value="<%= course.id %>"><%= course.name %></option>
      <% }); %>
    </select>
  </div>
  

  <button type="submit" class="btn btn-primary">Submit</button>
</form>