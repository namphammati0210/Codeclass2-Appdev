<form 
  action="/staff/editTrainerCourse?selectedTrainerId=<%= selectedTrainer.id %>&selectedCourseId=<%= selectedCourse.id %>" 
  method="POST"
  >

  <div class="form-group">
    <label for="exampleInputPassword1">Trainers</label>
    <select class="form-control" name="trainerId"> 
      <option value="<%= selectedTrainer.id %>"><%= selectedTrainer.fullname %></option>
      <% unassignedTrainers.forEach(trainer => { %>
        <option value="<%= trainer.id %>"><%= trainer.fullname %></option>
      <% }); %>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Courses</label>
    <select class="form-control" name="courseId">
      <option value="<%= selectedCourse.id %>"><%= selectedCourse.name %></option>
      <% unassignedCourses.forEach(course => { %>
        <option value="<%= course.id %>"><%= course.name %></option>
      <% }); %>
    </select>
  </div>
  

  <button type="submit" class="btn btn-primary">Submit</button>
</form>